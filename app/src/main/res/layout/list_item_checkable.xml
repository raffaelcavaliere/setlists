<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true">

    <TextView
        android:id="@+id/item_checkable_title"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/window_margin"
        android:paddingTop="@dimen/window_margin"
        android:paddingRight="@dimen/window_margin"
        android:textColor="@color/colorPrimaryDark"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_alignParentTop="false"
        android:layout_toStartOf="@+id/item_checkable_checkbox"
        android:layout_alignParentStart="true"
        android:text="Blue Suede Shoes"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAlignment="viewStart"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_checkable_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/window_margin"
        android:paddingRight="@dimen/window_margin"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_checkable_title"
        android:layout_toStartOf="@+id/item_checkable_checkbox"
        android:text="Elvis Presley"
        android:textSize="18sp"
        android:textAlignment="viewStart" />

    <CheckBox
        android:id="@+id/item_checkable_checkbox"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_height="30dp"
        android:layout_width="30dp" />

</RelativeLayout>