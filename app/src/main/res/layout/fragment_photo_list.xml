<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.raffaelcavaliere.setlists.ui.library.ArtistEditActivity">

    <TextView
        android:text="@string/dialog_text_searching_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/fragmentPhotoListText"
        android:textAppearance="@android:style/TextAppearance.Material.Small" />

    <TextView
        android:text="@string/dialog_text_no_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/fragmentPhotoListTextNoPictureFound"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />


    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:id="@+id/searchPicturesProgress"
        android:layout_height="wrap_content" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/searchArtistPhotoGrid"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:columnWidth="130dp" />


</LinearLayout>
